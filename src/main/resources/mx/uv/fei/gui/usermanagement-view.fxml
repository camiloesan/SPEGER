<HBox minHeight="600.0" minWidth="1000.0" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.uv.fei.gui.UserManagementController">
    <VBox fx:id="vboxSideBar" alignment="TOP_CENTER" prefWidth="200.0" style="-fx-background-color: #003466">
        <Label text="SSPGER" textFill="WHITE">
            <font>
                <Font name="Cantarell Regular" size="24.0"/>
            </font>
            <VBox.margin>
                <Insets top="12.0"/>
            </VBox.margin>
        </Label>
        <Label fx:id="labelUsername" text="Administrador" textFill="WHITE">
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </Label>
        <Line endX="100.0" fill="#f8f9fa" startX="-100.0" stroke="#f8f9fa">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Line>
        <StackPane prefHeight="40.0" prefWidth="180.0">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <VBox.margin>
                <Insets top="30.0"/>
            </VBox.margin>
            <Rectangle arcHeight="40.0" arcWidth="40.0" fill="#f8f9fa" height="40.0" layoutX="10.0"
                       layoutY="126.0" opacity="0.16" stroke="#003466" strokeType="INSIDE" width="180.0"/>
            <Label layoutX="67.0" layoutY="207.0" text="Gestión de Usuarios" textFill="WHITE">
                <font>
                    <Font name="Cantarell Regular" size="14.0"/>
                </font>
            </Label>
        </StackPane>
        <Line endX="100.0" startX="-50.0" stroke="#f8f9fa">
            <VBox.margin>
                <Insets top="12.0"/>
            </VBox.margin>
        </Line>
        <HBox fx:id="hboxLogOutLabel" alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
            <Label alignment="BOTTOM_LEFT" onMouseClicked="#actionLogOut" text="Cerrar Sesión" textFill="WHITE"
                   underline="true">
                <font>
                    <Font name="Cantarell Regular" size="14.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0"/>
                </HBox.margin>
            </Label>
        </HBox>
    </VBox>
    <TabPane prefHeight="501.0" prefWidth="604.0" tabClosingPolicy="UNAVAILABLE" HBox.hgrow="ALWAYS">
        <Tab fx:id="tabUsers" text="Usuarios">
            <VBox>
                <HBox prefHeight="45.0" prefWidth="798.0" style="-fx-background-color: #334b49;">
                    <Label text="Vista general" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0"/>
                        </font>
                        <HBox.margin>
                            <Insets left="16.0" top="14.0"/>
                        </HBox.margin>
                    </Label>
                </HBox>
                <HBox prefHeight="523.0" prefWidth="798.0">
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                    </padding>
                    <TableView fx:id="tableViewAccessAccounts" prefHeight="523.0" prefWidth="397.0">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <Separator orientation="VERTICAL" prefHeight="200.0">
                        <HBox.margin>
                            <Insets left="10.0" right="10.0"/>
                        </HBox.margin>
                    </Separator>
                    <VBox alignment="CENTER" prefHeight="523.0" prefWidth="401.0" spacing="25.0">
                        <Button mnemonicParsing="false" onAction="#buttonModifyAction"
                                text="Modificar"/>
                        <Button mnemonicParsing="false" onAction="#buttonDeleteAction"
                                prefHeight="26.0" prefWidth="75.0" text="Eliminar"/>
                    </VBox>
                </HBox>
            </VBox>
        </Tab>
        <Tab text="Añadir Usuario">
            <VBox alignment="TOP_CENTER" fillWidth="false">
                <HBox prefHeight="45.0" prefWidth="798.0" style="-fx-background-color: #334b49;">
                    <Label text="Añadir usuario" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0"/>
                        </font>
                        <HBox.margin>
                            <Insets left="16.0" top="14.0"/>
                        </HBox.margin>
                    </Label>
                </HBox>
                <GridPane prefHeight="135.0" prefWidth="548.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES"
                                           maxWidth="468.00316038416724" minWidth="10.0"
                                           prefWidth="360.66905500640263"/>
                        <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="439.33522781493804"
                                           minWidth="10.0" prefWidth="437.33522781493804"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <VBox.margin>
                        <Insets top="25.0"/>
                    </VBox.margin>
                    <Label text="Nombre de usuario: "/>
                    <Label text="Contraseña: " GridPane.rowIndex="1"/>
                    <Label text="Tipo de usuario: " GridPane.rowIndex="2"/>
                    <TextField fx:id="textFieldUsername" prefHeight="26.0" prefWidth="200.0"
                               GridPane.columnIndex="1"/>
                    <PasswordField fx:id="passwordFieldPassword" prefHeight="26.0" prefWidth="200.0"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="comboBoxUserType" onAction="#handleAddUserTypeSelection"
                              prefHeight="26.0" prefWidth="170.0" promptText="Tipo de usuario"
                              GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
                <StackPane prefHeight="188.0" prefWidth="463.0">
                    <GridPane fx:id="gridPaneProfessor" prefHeight="160.0" prefWidth="511.0"
                              visible="false">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES"
                                               maxWidth="536.0035808995206" minWidth="10.0"
                                               prefWidth="360.0024160443751"/>
                            <ColumnConstraints fillWidth="false" hgrow="SOMETIMES"
                                               maxWidth="442.66968495427346" minWidth="10.0"
                                               prefWidth="437.3363034659543"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="Nombre del profesor: "/>
                        <TextField fx:id="textFieldProfessorName" prefHeight="26.0"
                                   prefWidth="200.0" GridPane.columnIndex="1"/>
                        <Label text="Apellidos: " GridPane.rowIndex="1"/>
                        <TextField fx:id="textFieldProfessorLastName" prefHeight="26.0"
                                   prefWidth="200.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"/>
                        <Label text="Grado: " GridPane.rowIndex="2"/>
                        <ComboBox fx:id="comboBoxDegree" prefWidth="150.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="2"/>
                        <Label text="Correo institucional: " GridPane.rowIndex="3"/>
                        <TextField fx:id="textFieldProfessorEmail" prefHeight="26.0"
                                   prefWidth="200.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="3"/>
                    </GridPane>
                    <GridPane fx:id="gridPaneStudent" prefHeight="156.0" prefWidth="466.0"
                              visible="false">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES"
                                               maxWidth="528.6702379361967" minWidth="10.0"
                                               prefWidth="360.0024318859347"/>
                            <ColumnConstraints fillWidth="false" hgrow="SOMETIMES"
                                               maxWidth="438.66964580627257" minWidth="0.0"
                                               prefWidth="438.0029587945538"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="Matrícula: "/>
                        <Label text="Nombre: " GridPane.rowIndex="1"/>
                        <Label text="Apellidos: " GridPane.rowIndex="2"/>
                        <Label text="Correo institucional: " GridPane.rowIndex="3"/>
                        <TextField fx:id="textFieldStudentId" prefHeight="26.0" prefWidth="200.0"
                                   GridPane.columnIndex="1"/>
                        <TextField fx:id="textFieldStudentName" prefHeight="26.0" prefWidth="200.0"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TextField fx:id="textFieldStudentLastName" prefHeight="26.0"
                                   prefWidth="200.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"/>
                        <TextField fx:id="textFieldStudentEmail" prefHeight="26.0" prefWidth="200.0"
                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>
                </StackPane>
                <ButtonBar prefHeight="40.0" prefWidth="364.0">
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#buttonSaveAction" prefHeight="26.0"
                                prefWidth="75.0" text="Guardar"/>
                    </buttons>
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets right="20.0"/>
                    </padding>
                </ButtonBar>
            </VBox>
        </Tab>
    </TabPane>
</HBox>
