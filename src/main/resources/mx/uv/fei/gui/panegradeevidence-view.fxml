<VBox prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mx.uv.fei.gui.PaneGradeEvidenceController">
   <HBox prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #334b49" HBox.hgrow="ALWAYS">
      <Label text="Calificar evidencia" textFill="WHITE">
         <font>
            <Font name="Cantarell Regular" size="13.0"/>
         </font>
         <HBox.margin>
            <Insets left="16.0" top="14.0"/>
         </HBox.margin>
      </Label>
   </HBox>
   <GridPane prefHeight="420.0" prefWidth="700.0" VBox.vgrow="ALWAYS">
      <columnConstraints>
         <ColumnConstraints hgrow="ALWAYS" minWidth="20.0"/>
         <ColumnConstraints hgrow="ALWAYS" maxWidth="284.66863299648224" minWidth="270.0"
                            prefWidth="284.66863299648224"/>
         <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="494.0" minWidth="10.0"
                            prefWidth="375.3359740763162"/>
         <ColumnConstraints hgrow="ALWAYS" minWidth="20.0" prefWidth="20.0"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints maxHeight="20.0" minHeight="20.0" prefHeight="20.0" vgrow="NEVER"/>
         <RowConstraints maxHeight="229.33451775185338" minHeight="50.0" prefHeight="144.66764556608987" vgrow="NEVER"/>
         <RowConstraints maxHeight="200.0" minHeight="0.0" prefHeight="43.666953248627976" vgrow="ALWAYS"/>
         <RowConstraints maxHeight="131.33421066324757" minHeight="31.333561635319256" prefHeight="47.33365318805363"
                         vgrow="NEVER"/>
         <RowConstraints maxHeight="134.66756942789596" minHeight="23.666837006020955" prefHeight="49.000333099770955"
                         vgrow="NEVER"/>
         <RowConstraints maxHeight="152.33436542646893" minHeight="20.0" prefHeight="127.00086933271893"
                         vgrow="ALWAYS"/>
      </rowConstraints>
      <Label text="Evidencia a calificar:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2"
             GridPane.valignment="CENTER">
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </GridPane.margin>
      </Label>
      <Label text="Calificación:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3"
             GridPane.valignment="CENTER">
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </GridPane.margin>
      </Label>
      <Label fx:id="labelEvidenceToGrade" text="Label" GridPane.columnIndex="2" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </GridPane.margin>
      </Label>
      <TextField fx:id="textFieldGrade" prefHeight="26.0" prefWidth="55.0" GridPane.columnIndex="2"
                 GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </GridPane.margin>
      </TextField>
      <Button mnemonicParsing="false" onAction="#updateGrade" text="Actualizar Calificación" GridPane.columnIndex="2"
              GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </GridPane.margin>
      </Button>
   </GridPane>
   <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="72.0" prefWidth="700.0">
      <buttons>
         <Button mnemonicParsing="false" onAction="#returnToAdvancementList" text="Regresar"/>
      </buttons>
      <padding>
         <Insets right="50.0"/>
      </padding>
   </ButtonBar>
</VBox>
